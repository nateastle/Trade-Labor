<div class="container">
  <div class="row-fluid">   
    <div class="span12">     

         <div class="form-inputs">
           <fieldset>

            <div class="span6 sign-up-left">  
                <div>
                        <%= f.label :email %>
                        <%= f.email_field :email, :required => true %>
                </div>

                <div>
                    <%= f.label :password %>
                    <%= f.password_field :password, :required => true %>
                </div> 

                <div>
                    <%= f.label :password_confirmation %>   
                    <%= f.password_field :password_confirmation, :required => true %>
                </div>

                <div>
                    <%= f.label :business_name %>
                    <%= f.text_field :business_name %>
                </div>

                <div>
                    <%= f.label :first_name %>
                    <%= f.text_field :first_name%>
                </div>

                <div>
                    <%= f.label :last_name %>
                    <%= f.text_field :last_name%>
                </div>
                    <%#= f.association :skills %>

                <h3>Choose Your Plan</h3>
                <!-- <div>
                    <%#= f.label :skill_tokens, "Skills" %>
                    <%#= f.text_field :skill_tokens %>
                </div> -->

                <div>
                    <ul>
                      <li><%= f.radio_button :membership, Role::ROLES[:basic][:name] , :id => "basic"%><span>
                           Basic User
                      </span> </li>
                      <li><%= f.radio_button :membership, Role::ROLES[:business][:name] , :checked => true , :id => "business" %><span>
                        Business User
                      </span></li>
                      <li><%= f.radio_button :membership, Role::ROLES[:premium][:name] , :id => "premium"%><span>
                        Premium User
                      </span></li>
                    </ul> 
                </div>
            </div>  


            <div  class="span6">           
                <div>
                    <%= f.label :address_1 %>
                    <%= f.text_field :address_1 %>
                </div>
                <div>
                    <%= f.label :address_2 %>
                    <%= f.text_field :address_2 %>
                </div>
                <div>
                    <%= f.label :city %>
                    <%= f.text_field :city %>
                </div>
                <div>
                    <%= f.label :state %>
                    <%= f.text_field :state %>
                </div>
                <div>
                    <%= f.label :postal_code %>
                    <%= f.text_field :postal_code %>
                </div>
                <div>
                    <%= f.label :contact_phone %>
                    <%= f.text_field :contact_phone %>
                </div>
                <div>
                    <%= f.label :cell_phone %>
                    <%= f.text_field :cell_phone %>
                </div>
                <h3>Schedule</h3>
                <div class="inline_check_boxes">
                    <%= f.fields_for :schedule do |schedule| %>  
                        <div>
                            <%= schedule.label :days, "Available Days" %>
                            <%= schedule.check_box :days %>
                        </div>
                         <div>
                            <%= schedule.label :nights, "Available Nights" %>
                            <%= schedule.check_box :nights %> 
                        </div>
                         <div>
                            <%= schedule.label :weekends, "Available Weekends" %>
                            <%= schedule.check_box :weekends %>
                        </div>
                    <% end %>
                </div>    
            </div>      
         </fieldset>
        </div>


   </div>
 </div>

  <div class="row-fluid">   
    <div class="span12"> 

          <div id="payment_detail" >
              <%= render :partial => 'payment_detail',:locals => {:payment_detail => resource.build_payment_detail } %>
          </div>

            <div>
                <div id="terms-pane">
                    <%= render :partial => "shared/terms_and_conditions"%>
                </div>
                <div class="inline_check_boxes" style="padding-top:15px;">
                    <%= f.label :terms_of_service %>
                    <%= f.check_box :terms_of_service %> 
                </div>
            </div>  
 
    </div>
  </div>

</div>

