<div id="ajax-modal" class="modal hide fade" tabindex="-1">
  
    <div class='modal-header'>
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h3 class="modal-title">Photo</h3>
    </div>
    <div class='modal-body'>
      <div class="modal-body-content"> 
        <div>
             <%= image_tag @photo.name_url(:profile), :alt =>"img" %>
        </div>
      </div>
      <div class="ajax-loader"></div>
    </div>
    <div class='modal-footer'>
      
      <% if current_user && current_user.id == @user.id && @photo.is_not_profile_picture? %>
          <%= form_tag set_as_profile_photo_user_photo_path(@user , @photo) ,:remote => true, :method => :post , :id => 'show_photo_form' , :class=> 'ajax_form' do %>
            <%= submit_tag "Set As Profile Picture" , :class=>"btn  btn-info" , :disable_with=>"Submitting..."%> 
            <span id="loder" style="display:none;"><%= image_tag "loader.gif" %></span>
          <% end %> 
      <% end %>   
      
      <button type="button" data-dismiss="modal" class="btn">Close</button> 
    
    </div>
 
</div>
